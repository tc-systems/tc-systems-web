---
interface Props {
  title?: string;
  class?: string;
}

const { title, class: className = '' } = Astro.props;
---

<div class={`bg-dark-card border border-slate-800 rounded-lg p-6 hover:border-cyan-400/50 transition-all duration-200 ${className}`}>
  {title && <h3 class="text-xl font-semibold text-slate-100 mb-4">{title}</h3>}
  <slot />
</div>
