---
import Logo from './Logo.astro';

const navItems = [
  { href: '/services', label: 'Services' },
  { href: '/about', label: 'About' },
  { href: '/blog', label: 'Blog' },
  { href: '/contact', label: 'Contact' },
];
---

<footer class="bg-dark-card border-t border-slate-800 mt-16">
  <div class="max-w-6xl mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div>
        <Logo variant="dark" wordmark />
        <p class="mt-4 text-slate-400 text-sm">
          Platform Engineering for Modern Infrastructure
        </p>
      </div>
      
      <div>
        <h3 class="font-semibold text-slate-200 mb-4">Navigation</h3>
        <ul class="space-y-2">
          {navItems.map(({ href, label }) => (
            <li>
              <a href={href} class="text-slate-400 hover:text-cyan-400 transition-colors text-sm">
                {label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <div>
        <h3 class="font-semibold text-slate-200 mb-4">Contact</h3>
        <ul class="space-y-2 text-sm">
          <li>
            <a href="mailto:contact@tc.systems" class="text-slate-400 hover:text-cyan-400 transition-colors">
              contact@tc.systems
            </a>
          </li>
          <li>
            <a href="#" class="text-slate-400 hover:text-cyan-400 transition-colors">
              LinkedIn
            </a>
          </li>
        </ul>
      </div>
    </div>
    
    <div class="mt-12 pt-8 border-t border-slate-800 text-center text-slate-400 text-sm">
      <p>&copy; {new Date().getFullYear()} Taming Chaos Systems Ltd. All rights reserved.</p>
    </div>
  </div>
</footer>
