---
import Logo from './Logo.astro';

const navItems = [
  { href: '/services', label: 'Services' },
  { href: '/about', label: 'About' },
  { href: '/blog', label: 'Blog' },
  { href: '/contact', label: 'Contact' },
];
---

<header class="sticky top-0 z-50 bg-dark-bg/95 backdrop-blur-sm border-b border-slate-800">
  <nav class="max-w-6xl mx-auto px-4 py-4 flex items-center justify-between">
    <a href="/" class="flex items-center gap-2 hover:opacity-80 transition-opacity">
      <Logo variant="dark" wordmark />
    </a>
    
    <div class="hidden md:flex items-center gap-8">
      {navItems.map(({ href, label }) => (
        <a 
          href={href} 
          class="text-slate-300 hover:text-cyan-400 transition-colors"
        >
          {label}
        </a>
      ))}
    </div>
    
    <button 
      id="mobile-menu-toggle"
      class="md:hidden text-slate-300 hover:text-cyan-400"
      aria-label="Toggle menu"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </nav>
  
  <div id="mobile-menu" class="hidden md:hidden border-t border-slate-800">
    <div class="px-4 py-4 space-y-4">
      {navItems.map(({ href, label }) => (
        <a 
          href={href} 
          class="block text-slate-300 hover:text-cyan-400 transition-colors"
        >
          {label}
        </a>
      ))}
    </div>
  </div>
</header>

<script>
  document.getElementById('mobile-menu-toggle')?.addEventListener('click', () => {
    const menu = document.getElementById('mobile-menu');
    menu?.classList.toggle('hidden');
  });
</script>
