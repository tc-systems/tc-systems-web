---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
---

<Layout 
  title="Contact - Taming Chaos Systems"
  description="Get in touch with Taming Chaos Systems for platform engineering consultancy. Located in Crewe, UK with remote work available."
>
  <Header />
  
  <main class="min-h-screen">
    <section class="max-w-2xl mx-auto px-4 py-16 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-slate-100 mb-4">
        Get in Touch
      </h1>
      <p class="text-xl text-slate-400 mb-12">
        Let's discuss how platform engineering can help your organization
      </p>
      
      <div class="bg-dark-card border border-slate-800 rounded-lg p-8 space-y-6 text-left">
        <div>
          <h3 class="text-cyan-400 font-semibold mb-2">Email</h3>
          <a 
            href="mailto:contact@tc.systems" 
            class="text-slate-300 hover:text-cyan-400 transition-colors text-lg"
          >
            contact@tc.systems
          </a>
        </div>
        
        <div>
          <h3 class="text-cyan-400 font-semibold mb-2">LinkedIn</h3>
          <a 
            href="#" 
            class="text-slate-300 hover:text-cyan-400 transition-colors"
          >
            Connect on LinkedIn
          </a>
        </div>
        
        <div>
          <h3 class="text-cyan-400 font-semibold mb-2">Location</h3>
          <p class="text-slate-300">Crewe, UK</p>
          <p class="text-slate-400 text-sm">Remote work available</p>
        </div>
        
        <div class="pt-4 border-t border-slate-700">
          <p class="text-slate-400 text-sm">
            We typically respond within 24-48 hours
          </p>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>
